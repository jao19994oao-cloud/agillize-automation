# Banco de dados (preencha com valores locais de desenvolvimento)
DB_USER=postgres
DB_HOST=localhost
DB_NAME=agillize_palm
# Use uma senha segura — NÃO COMMITAR valores reais
DB_PASSWORD=changeme
DB_PORT=5432

# JWT: gere um segredo forte (ex: openssl rand -hex 32)
# O script `npm run bootstrap-env` gera um `JWT_SECRET` automaticamente e salva em `.env`.
JWT_SECRET=replace_with_a_strong_random_value

# Asaas (gateway de pagamento) - configure se usar
ASAAS_API_URL=https://api.asaas.com
ASAAS_API_KEY=your_asaas_api_key

# Porta da aplicação
PORT=3000
